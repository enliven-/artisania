<p id="notice"><%= notice %></p>

<h4><%=@project.name=%></h4>


</br></br>
<table class="project table table-bordered table-striped table-hover">
    <tr>
        <td>Project Description:</td> <td><%=@project.description=%></td>
    </tr>
    <tr>
        <td>Owner Artisan</td> <td><%=@project.user.email=%>
    </tr>
    <tr>
        <td>Created At:</td> <td><%=@project.created_at=%></td>
    </tr>
    <tr>
        <td>Last Updated At:</td> <td><%=@project.updated_at=%>
    </tr>
    <% if current_user.customer? and @project.customer_id==current_user.id %>
        <tr>
            <td>Actions: </td> <td><%= link_to 'Work on design', design_project_path(id: @project.id) %></td>
        </tr>
        <tr>
            <td></td> <td><%= link_to "Send Invite to artisan" , send_invitation_project_path(@project), method: :post %></td>
        </tr>
    <% elsif @project.customer_id==current_user.id %>
        <tr>
            <td>Actions: </td> <td><%= link_to 'Edit', edit_project_path(@project) %></td>
        </tr>
        <tr>
            <td></td> <td><%= link_to 'Design', design_project_path(id: @project.id) %></td>
        </tr>   
    <% end %>
</table>


</br>

<% if current_user.artisan? %>

<h4>Palettes associated with this Project</h4>

<table class="project table table-bordered table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Link</th>
  <% @palettes.each do |palette| %>
    <tr>
      <td><%= palette.name %></td>
      <td><%= link_to 'Show', palette %></td>
    </tr>
  <% end %>
</table>
<% end %>



<div id="canvas_container">
    <div id="canvas"></div>
</div>

<style>
#canvas {
  background-image: url(<%= @project.img_file.url %>);
  background-repeat:no-repeat;
  width: 500px;
  height: 500px;
  background-size: 500px 500px;
}
</style>

