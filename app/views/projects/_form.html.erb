<%= simple_form_for @project, url_path: projects_path, html: { multipart: true } do |f| %>
  <%= f.input :name, label: "Project Name" %>
  <%= f.input :description, as: :text %>
  <%= f.file_field :img_file %><br><br>
  
  <%= f.simple_fields_for :palettes do |palette_form| %>
    <%= render 'palettes/palette_fields', :f => palette_form %>
  <% end %>
  
  
  <%= f.button :submit, "Save and continue" %>
<% end %>

<style>
textarea, input {
    max-height: 200px;
    width: 400px;
}
body {
    padding-left: 20px;
}
</style>
