

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% if current_user.artisan? %>

<% @catalogs.each do |catalog| %>
  <tr>
    <td><%= link_to 'Show', catalog %></td>
    <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
    <td><%= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Catalog', new_catalog_path %>

<% else %>


<table class="table table-bordered table-striped table-hover">
<% @users.each do |user| %>
  <tr>
    <th>Owner</th>
    <th>Product Count</th>
    <th>Action</th>
  </tr>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.catalog.length %></td>
    <td><%= link_to 'Show', products_by_artisan_projects_path(user_id: user.id) %></td>
  </tr>
<% end %>
</table>

<% end %>


