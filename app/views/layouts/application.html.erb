<!DOCTYPE html>
<html>
<head>
  <title>Artisania</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
		  <%= link_to 'Artisania', root_path, class: 'brand' %>
	    <ul class="nav">
			<% if current_user %>
				<% if current_user.artisan? %>
					<li><%= link_to 'Projects',  projects_path %></li>
					<li><%= link_to 'Catalog', 	 products_by_artisan_projects_path(user_id: current_user.id) %></li>
					<li><%= link_to 'Palettes',  palettes_path %></li>
				<% elsif current_user.customer? %>
					<li><%= link_to 'New Project',  new_project_path %></li>
					<li><%= link_to 'New Category', new_product_category_path %></li>
					<li><%= link_to 'Show Catalog', products_by_artisan_projects_path(user_id: current_user.id) %></li>
				<% end %>
	    </ul>
			<ul class="nav pull-right" style="float: right;">
				<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
			</ul>
			<% end %>
	  </div>
	</div>
    <div class="row" id="main-container">
        <div>
        </div>
        <div id="right-main-container">
        	<%= yield %>
        </div>
    </div>
</body>
</html>


