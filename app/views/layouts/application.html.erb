<!DOCTYPE html>
<html>
<head>
  <title>Artisania</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
		  <%= link_to 'Artisania', root_path, class: 'brand' %>
	    <ul class="nav">
			<% if current_user %>
				<% if current_user.artisan? %>
					<li><%= link_to 'Projects',  projects_path %></li>
					<li><%= link_to 'Catalog', 	 products_by_artisan_projects_path(user_id: current_user.id) %></li>
					<li><%= link_to 'Palettes',  palettes_path %></li>
				<% elsif current_user.customer? %>
					<li><%= link_to 'Projects',  projects_path(customer_id: current_user.id) %></li>
					<li><%= link_to 'Catalogs', catalogs_path %></li>
					<li><%= link_to 'Products', products_projects_path %></li>
				<% end %>
	    	<% end %>
	    </ul>
			<ul class="nav pull-right" style="float: right;">
				<% if current_user %>
					<li style="color: white;"><a href="">Hello, <%= current_user.email %></a></li>
					<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
				<% else %>
					<li><%= link_to "Forgot password?", new_password_path(resource_name) %></li>
					<li><%= link_to 'Sign Up', new_user_registration_path %></li>
				<% end %>
			</ul>
	  </div>
	</div>
    <div class="row" id="main-container">
        <div class="span0" id="left-main-container">
        </div>
        <div class="span12" id="right-main-container">
        	<%= yield %>
        </div>
    </div>
</body>
</html>
