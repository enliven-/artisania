<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @attribute.name %>
</p>

<p>
  <b>Attr img:</b>
  <%= image_tag @attribute.attr_img.url(:thumb) %>
</p>

<p>
  <b>Palette</b>
  <% if @attribute.attribute_layer %>
  <%= @attribute.attribute_layer.palette.name %>
  <% else %>
  None
  <% end %>
</p>

<p>
  <b>Attribute Layer:</b>
  <% if @attribute.attribute_layer %>
  <%= @attribute.attribute_layer.name %>
  <% else %>
  None
  <% end %>
</p>


<%= link_to 'Edit', edit_attribute_path(@attribute) %> |
<%= link_to 'Back', attributes_path %>
